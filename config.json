{
  "network": {
    "timeout": 8000,
    "maxRetries": 3,
    "retryDelay": 5000,
    "connectionTimeout": 30000,
    "requestTimeout": 15000
  },
  "whatsapp": {
    "headless": true,
    "useChrome": false,
    "debug": false,
    "logQR": false,
    "multidevice": true,
    "browserArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-accelerated-2d-canvas",
      "--no-first-run",
      "--no-zygote",
      "--disable-gpu",
      "--disable-web-security",
      "--disable-features=VizDisplayCompositor"
    ]
  },
  "trial": {
    "days": 5,
    "networkTimeout": 8000,
    "maxRetries": 2,
    "timeSources": [
      "https://www.google.com",
      "https://worldtimeapi.org/api/ip",
      "https://httpbin.org/headers"
    ]
  },
  "quota": {
    "dailyLimit": 200,
    "resetTime": "00:00"
  },
  "logging": {
    "level": "info",
    "enableConsole": true,
    "enableFile": false
  }
}
